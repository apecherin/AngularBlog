<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="well">
        <h2>Sign Up</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:autocomplete => :off, :class => "form-horizontal", :role => "form", :multipart => true}) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <label for="inputText" class="col-lg-2 control-label">Имя</label>
            <div class="col-lg-8">
              <%= f.text_field :username, :autofocus => true, :type => "text", :class => "form-control", :placeholder => "Username"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8">
              <%= f.email_field :email, :type => "email", :class => "form-control", :placeholder => "Email Address"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8">
              <%= f.password_field :password, :type => "password", :class => "form-control", :placeholder => "Password"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8">
              <%= f.password_field :password_confirmation, :type => "password", :class => "form-control", :placeholder => "Password confirmation"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-9 col-lg-10">
              <div><%= f.submit "Sign up", :class => "btn btn-success" %></div>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>